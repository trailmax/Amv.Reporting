@model AmvReporting.Domain.Reports.Commands.CreateReportCommand

@{
    ViewBag.Title = "Create New Report";
}

<h2>Create New Graph</h2>
@using (Html.BeginForm(MVC.Report.Create(), FormMethod.Post, new { role = "form" }))
{
    <div class="row">
        @Html.ValidationSummary(false)

        <div class="col-md-6">
            @Html.Partial(MVC.Report.Views._Metadata, Model)

            <input type="submit" value="Save" class="btn btn-default" />
            @Html.ActionLink("Back To List", MVC.Report.Index(), new { @class = "btn btn-default" })
        </div>
    </div>
}
