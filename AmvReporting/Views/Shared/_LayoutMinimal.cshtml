<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @if (Request.UserAgent != null && (Request.UserAgent.Contains("MSIE 8") || Request.UserAgent.Contains("MSIE 7")))
    {
        <meta http-equiv="X-UA-Compatible" content="IE=8" />
    }else
    {
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    }
    <title>@ViewBag.Title</title>
    @Styles.Render(Bundles.ClientCss)
    @RenderSection("css", required: false)
</head>
<body>

    @RenderBody()



    @Scripts.Render(Bundles.ClientJs)

<script type="text/javascript" language="javascript">

    $('#treetable').persistedTreeTable({
        persist: true,
        expandable: true,
        clickableNodeNames: true
    });

    $('.expand-all').on('click', function () {
        $('#treetable').treetable('expandAll');
        return false;
    });

    $('.collapse-all').on('click', function () {
        $('#treetable').treetable('collapseAll');
        return false;
    });

</script>

    @RenderSection("scripts", required: false)
</body>
</html>
