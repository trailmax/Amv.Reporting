@model AmvReporting.Domain.ReportGroups.Commands.EditReportGroupCommand

@{
    ViewBag.Title = "Edit Report Group";
}

<h2>Edit Report Group</h2>

@using (Html.BeginForm(MVC.ReportGroup.Edit(), FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(r => r.Id)
    <div class="form-group">
        @Html.LabelFor(r => r.ParentReportGroupId, new { @class = "control-label" })
        @Html.Domain().Dropdown(r => r.ParentReportGroupId, new ReportGroupParentsDropdownQuery(Model.Id))
        @Html.ValidationMessageFor(r => r.ParentReportGroupId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Enabled, new { @class = "control-label" })
        @Html.CheckBoxFor(m => m.Enabled)
        @Html.ValidationMessageFor(m => m.Enabled)
    </div>

    <input type="submit" value="Save" class="btn btn-default" />
    @Html.ActionLink("Back To List", MVC.Report.Index(), new { @class = "btn btn-default" })
}