@model IEnumerable<DatabaseConnection>

@{
    ViewBag.Title = "All Databases";
}

<h2>All Databases</h2>

<div class="row">
    <div class="col-md-9">
        <p>
            @Html.ActionLink("New Database Configuration", MVC.Database.Create(), new { @class = "btn btn-primary btn-lg" })
        </p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 150px;"></th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-sm-2">
                            @Html.ActionLink("Edit", MVC.Database.Edit(item.Id), new { dbId = item.Id, @Class = "btn btn-default" }) 
                            @Url.AjaxDeleteButton(MVC.Database.Delete(), item, i => i.Id)
                        </td>
                        <td>@Html.DisplayFor(_ => item.Name)</td>
                        <td>@Html.DisplayFor(_ => item.Description)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>